<h1>Foods</h1>

<% @foods.each do |food| %>
  <section class='food'>
    <h3 class='description'>Descrition: <%= food[:description] %></h3>
   <ul>
      <% if food[:gtinUpc]  %>
        <li class='gtin'>GTIN:<%= food[:gtinUpc] %></li>
      <% else %>
        <li class='gtin'>GTIN: Unavailable</li>
      <% end %>
      <li class='brand_owner'>Brand Owner: <%= food[:brandOwner] %></li>
      <li class='ingredients'>Ingredients: <%= food[:ingredients] %></li>
   </ul>
  </section><br><br>
<% end %>
